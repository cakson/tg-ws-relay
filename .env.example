# Server Configuration
PORT=8080

# Security
# Comma-separated list of allowed origins (leave empty to allow all)
ALLOWED_ORIGINS=
# Optional shared token for authentication
TOKEN=change-me

# Logging
# Options: trace, debug, info, warn, error
LOG_LEVEL=debug
# Pretty print logs for development (set to true for dev)
LOG_PRETTY=false

# Timeouts (milliseconds)
CLIENT_IDLE_TIMEOUT_MS=120000
UPSTREAM_IDLE_TIMEOUT_MS=120000
PING_INTERVAL_MS=25000

# Backpressure Control
# Maximum buffered bytes before applying backpressure
MAX_BUFFERED_BYTES=5000000

# Allowed Upstream Hosts (REQUIRED)
# Comma-separated list of allowed upstream WebSocket host patterns
# Supports wildcards (*) for pattern matching
# Examples:
#   *.telegram.org                    - Allow any subdomain of telegram.org
#   *.web.telegram.org                 - Allow any subdomain of web.telegram.org
#   pluto.web.telegram.org            - Allow exact host
#   *.telegram.org,*.example.com      - Multiple patterns
ALLOWED_UPSTREAM_HOSTS=*.web.telegram.org